{
  "BaseUrl": "http://localhost:5000",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=VisitorManagementDB;Trusted_Connection=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@yourcompany.com",
    "FromName": "Visitor Management System",
    "EnableSsl": true,
    "TimeoutSeconds": 30,
    "MaxAttachmentSizeMB": 25,
    "EnableSending": false,
    "TestEmail": "test@yourcompany.com",
    "TemplateDirectory": "EmailTemplates",
    "CompanyLogoUrl": "https://yourcompany.com/logo.png",
    "CompanyWebsiteUrl": "https://yourcompany.com",
    "SupportEmail": "support@yourcompany.com"
  },
  "FileUpload": {
    "MaxDocumentSize": 10485760,
    "AllowedImageExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".bmp" ],
    "AllowedDocumentExtensions": [ ".pdf", ".doc", ".docx", ".jpg", ".jpeg", ".png", ".gif", ".bmp", ".tiff" ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://192.168.0.59:3000"
    ],
    "AllowedMethods": [
      "GET",
      "POST", 
      "PUT",
      "DELETE",
      "OPTIONS",
      "PATCH"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Request-ID",
      "X-VMS-Client",
      "X-VMS-Version"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/vms-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithCorrelationId", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
