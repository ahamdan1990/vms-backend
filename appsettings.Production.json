{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "VisitorManagementSystem": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "#{CONNECTION_STRING}#",
    "Redis": "#{REDIS_CONNECTION_STRING}#"
  },
  "JWT": {
    "SecretKey": "#{JWT_SECRET_KEY}#",
    "ExpiryInMinutes": 15,
    "RefreshTokenExpiryInDays": 7
  },
  "Security": {
    "PasswordPolicy": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredLength": 12,
      "RequiredUniqueChars": 4
    },
    "Lockout": {
      "DefaultLockoutTimeSpan": "00:30:00",
      "MaxFailedAccessAttempts": 3
    },
    "RateLimiting": {
      "LoginAttempts": {
        "PermitLimit": 3,
        "Window": "00:05:00"
      },
      "GeneralApi": {
        "PermitLimit": 50,
        "Window": "00:01:00"
      }
    },
    "EncryptionKeys": {
      "DataProtectionKey": "#{DATA_PROTECTION_KEY}#",
      "DatabaseEncryptionKey": "#{DATABASE_ENCRYPTION_KEY}#"
    }
  },
  "FRSystem": {
    "GraphQLEndpoint": "#{FR_GRAPHQL_ENDPOINT}#",
    "ApiKey": "#{FR_API_KEY}#",
    "WebhookSecret": "#{FR_WEBHOOK_SECRET}#",
    "Timeout": "00:00:30",
    "RetryCount": 3
  },
  "Email": {
    "SmtpHost": "#{SMTP_HOST}#",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "#{SMTP_USERNAME}#",
    "Password": "#{SMTP_PASSWORD}#",
    "FromAddress": "#{FROM_EMAIL}#",
    "FromName": "Visitor Management System"
  },
  "SMS": {
    "Provider": "Twilio",
    "AccountSid": "#{TWILIO_ACCOUNT_SID}#",
    "AuthToken": "#{TWILIO_AUTH_TOKEN}#",
    "FromNumber": "#{TWILIO_FROM_NUMBER}#"
  },
  "SystemSettings": {
    "DefaultTimeZone": "UTC",
    "DateFormat": "yyyy-MM-dd",
    "TimeFormat": "HH:mm:ss",
    "DefaultPageSize": 20,
    "MaxPageSize": 50,
    "SessionTimeout": "00:30:00",
    "EnableAuditLogging": true,
    "EnableRealTimeNotifications": true
  },
  "DetailedErrors": false,
  "IncludeScopes": false
}