{
  "BaseUrl": "http://localhost:5000",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://127.0.0.1:3000",
      "https://127.0.0.1:3000"
    ],
    "AllowedMethods": [
      "GET",
      "POST", 
      "PUT",
      "DELETE",
      "OPTIONS",
      "PATCH",
      "HEAD"
    ],
    "AllowedHeaders": [
      "*"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.EntityFrameworkCore": "Debug",
      "Microsoft.EntityFrameworkCore.Database.Command": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=VisitorManagementDB_Dev2;Trusted_Connection=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "JWT": {
    "SecretKey": "DevelopmentSecretKeyForJWTTokenGenerationThatMustBeAtLeast256BitsLong",
    "ExpiryInMinutes": 60
  },
  "Security": {
    "PasswordPolicy": {
      "RequireDigit": false,
      "RequireLowercase": false,
      "RequireUppercase": false,
      "RequireNonAlphanumeric": false,
      "RequiredLength": 6,
      "RequiredUniqueChars": 1
    },
    "Lockout": {
      "DefaultLockoutTimeSpan": "00:05:00",
      "MaxFailedAccessAttempts": 300
    },
    "RateLimiting": {
      "LoginAttempts": {
        "PermitLimit": 20,
        "Window": "00:05:00"
      },
      "GeneralApi": {
        "PermitLimit": 1000,
        "Window": "00:01:00"
      }
    }
  },
  "FRSystem": {
    "GraphQLEndpoint": "https://dev-fr-system.com/graphql",
    "ApiKey": "dev-api-key",
    "WebhookSecret": "dev-webhook-secret"
  },
  "Email": {
    "SmtpHost": "localhost",
    "SmtpPort": 1025,
    "Username": "",
    "Password": "",
    "FromEmail": "dev@vms.com",
    "FromName": "VMS Development",
    "EnableSsl": false,
    "TimeoutSeconds": 30,
    "MaxAttachmentSizeMB": 25,
    "EnableSending": false,
    "TestEmail": "test@vms.dev",
    "TemplateDirectory": "EmailTemplates",
    "CompanyLogoUrl": "http://localhost:5000/logo.png",
    "CompanyWebsiteUrl": "http://localhost:5000",
    "SupportEmail": "support@vms.dev"
  },
  "SystemSettings": {
    "EnableAuditLogging": true,
